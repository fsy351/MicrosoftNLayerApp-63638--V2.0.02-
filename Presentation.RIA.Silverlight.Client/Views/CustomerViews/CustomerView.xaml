                           Foreground="White"
                           FontFamily="/Microsoft.Samples.NLayerApp.Presentation.Silverlight.Client;component/Resources/Fonts/HelveticaThn.ttf#Helvetica35-Thin"
                           FontSize="18.667"
                           Margin="0,0,0,0" />
                <TextBlock x:Name="TB_Company"
                           Text="{Binding Customer.Company}"
                           Foreground="White"
                           FontFamily="/Microsoft.Samples.NLayerApp.Presentation.Silverlight.Client;component/Resources/Fonts/HelveticaThn.ttf#Helvetica35-Thin"
                           FontSize="12"
                           Margin="0,0,0,0" />
